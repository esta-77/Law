<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:gravity="center"
          tools:text="Esther Fosuaa"
          android:layout_marginTop="20dp"
          android:textSize="21sp"
          android:textColor="@color/black"
          android:id="@+id/lawyer_name"
          android:layout_marginBottom="5dp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="Intellectual Property Lawyer"
          android:layout_below="@id/lawyer_name"
          android:id="@+id/lawyer_group"
          android:layout_marginBottom="15dp"
          android:gravity="center"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/icon_group"
          android:layout_below="@id/lawyer_group"
          android:padding="10dp"
          android:orientation="horizontal">

          <ImageView
              android:layout_gravity="center_vertical"
              android:layout_weight="1"
              android:src="@drawable/ic_message"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/message" />

          <de.hdodenhof.circleimageview.CircleImageView
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="100dp"
              android:src="@drawable/person"
              android:scaleType="centerCrop"
              app:civ_border_color="@color/colorPrimary"
              app:civ_border_width="2dp"
              android:id="@+id/lawyer_image"
              app:civ_circle_background_color="@color/colorPrimary"
             />

          <ImageView
              android:layout_gravity="center_vertical"
              android:layout_weight="1"
              android:src="@drawable/ic_phone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/call" />


      </LinearLayout>





      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/icon_group"
          android:background="@color/gray"
          android:id="@+id/divider_1"
          android:layout_marginBottom="10dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_below="@id/divider_1"
          android:id="@+id/cases_value">

          <TextView
              android:id="@+id/cases_won"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="2"
              android:textColor="@color/colorPrimary"
              android:textSize="20sp"
              android:gravity="center"/>

          <TextView
              android:id="@+id/cases_total"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="10"
              android:textColor="@color/colorPrimary"
              android:textSize="20sp"/>

          <TextView
              android:id="@+id/cases_lost"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="8"
              android:textColor="@color/colorPrimary"
              android:textSize="20sp"/>

      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_below="@id/cases_value"
          android:id="@+id/cases_text"
          android:layout_marginBottom="10dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:textColor="@color/black"
              android:text="@string/cases_won"/>


          <TextView
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/cases_number"
              android:gravity="center"
              android:textColor="@color/black"/>

          <TextView
              android:textColor="@color/black"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/cases_lost"/>

      </LinearLayout>

      <View
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/cases_text"
          android:background="@color/gray"
          android:id="@+id/divider_2"
          android:layout_marginBottom="15dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:layout_below="@id/divider_2"
          android:text="@string/desc"
          android:id="@+id/description"
          android:textColor="@color/black"
          android:textStyle="normal"/>


      <View
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/description"
          android:background="@color/gray"
          android:id="@+id/divider_3"
          android:layout_marginBottom="10dp"/>








  </RelativeLayout>


</ScrollView>